---
import Header from "../../components/Header.astro";
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";

export async function getStaticPaths() {
  const curl =
    "https://naqotdixmvkmxlfitrst.supabase.co/rest/v1/pleasant produkter?select=*";

  const apikey =
    "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im5hcW90ZGl4bXZrbXhsZml0cnN0Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDQyNjgxNjksImV4cCI6MjA1OTg0NDE2OX0.QEKabtlSzIXwoVA_69Agvl81ayHtTYi0FKWk_tb__t4";

  const options = {
    headers: {
      apikey: apikey,
    },
  };

  const response = await fetch(curl, options);
  const data = await response.json();

  return data.map((data) => {
    return {
      params: { id: data.id },
      props: { data },
    };
  });
}

const { id } = Astro.params;
const { data } = Astro.props;
const allSizes = ["XS", "S", "M", "L", "XL"];
const availableSizes = JSON.parse(data.size);
---

<Layout>
  <Header />
  <nav class="nav">
    <a href="index.astro">Home</a> > <a href="listeview.astro">Produkter</a> > <a
      href="singleview.astro">{data.name}</a
    >
  </nav>
  <h1 class="productdescr">{data.name}</h1>
  <img src={"/imgs/" + data.image} alt="" class="product_img" />

  <section>
    <div class="btn">
      <p class="btn1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="star"
        >
          <path
            fill-rule="evenodd"
            d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
            clip-rule="evenodd"></path>
        </svg>
        4,7 på Trustpilot
      </p>

      <p class="btn2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="truck"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 0 0-10.026 0 1.106 1.106 0 0 0-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12"
          ></path>
        </svg>
        1-3 dages levering
      </p>
    </div>

    <div class="product_info">
      <p>{data.price},00 DKK</p>
      <p>Vælg størrelse:</p>
    </div>
    <section class="sizes">
      {
        allSizes.map((size) => (
          <div
            class={`size-box ${availableSizes.includes(size) ? "" : "unavailable"}`}
          >
            {size}
            {!availableSizes.includes(size) && <div class="cross" />}
          </div>
        ))
      }
    </section>

    <div class="buy_btn">
      <p class="buy">Læg i kurv</p>
    </div>

    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1"
      stroke="currentColor"
      class="check"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="m4.5 12.75 6 6 9-13.5"></path>
    </svg>
  </section>

  <Footer />
</Layout>

<style>
  h1 {
    font-weight: 300;
    color: #582d93;
    font-size: 2.5rem;
    margin-left: 30px;
  }
  nav {
    color: #172b3a;
    font-size: 0.7rem;
    margin: 30px 0 0 30px;
  }
  .product_img {
    width: 87%;
    height: auto;
    margin: 0 auto;
    display: block;
    max-width: 430px;
  }
  .product_img img {
    width: 100%;
    height: auto;
  }

  .btn {
    display: flex;
    margin: 16px auto auto 33px;
    gap: 16px;
    max-width: 300px;
  }

  .btn1,
  .btn2 {
    flex: 1;
    padding: 10px 10px;
    color: black;
    border: 1px solid black;
    text-align: center;
    gap: 8px;
    font-size: 0.65rem;
  }

  .btn1 {
    display: flex;
    align-items: center;
  }

  .btn2 {
    display: flex;
    align-items: center;
  }

  .star {
    flex-shrink: 0;
    vertical-align: middle;
    width: 20px;
    height: 20px;
  }

  .truck {
    flex-shrink: 0;
    vertical-align: middle;
    width: 20px;
    height: 20px;
  }

  .product_info {
    margin-left: 33px;
  }

  .sizes {
    display: flex;
    gap: 20px;
    justify-content: left;
    margin: 20px 33px;
  }

  .size-box {
    position: relative;
    width: 40px;
    height: 40px;
    border: 1px solid black;
    font-size: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .size-box .cross {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .size-box .cross::before,
  .size-box .cross::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 58px;
    height: 1px;
    background: black;
    transform-origin: center;
  }

  .size-box .cross::before {
    transform: translate(-50%, -50%) rotate(45deg);
  }

  .size-box .cross::after {
    transform: translate(-50%, -50%) rotate(-45deg);
  }

  .buy_btn {
    display: flex;
    justify-content: flex-start;
    margin-left: 30px;
  }
  .buy {
    background-color: #582d93;
    color: white;
    padding: 15px 93px;
    border-radius: 50px;
    font-size: 1.4rem;
    text-align: center;
  }

  .check {
    color: green;
    margin: 30px 0 0 30px;
    width: 30px;
    height: 30px;
  }

  @media (min-width: 768px) {
    .product_img {
      display: flex;
      justify-content: flex-start;
      width: 50%;
      margin: auto auto auto 30px;
    }
    .productdescr {
      display: flex;
      justify-content: flex-end;
      max-width: 400px;
    }
    .btn {
      max-width: 400px;
    }
    .sizes {
      gap: 30px;
    }
  }
</style>
