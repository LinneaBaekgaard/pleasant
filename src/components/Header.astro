        dropdownMenu.classList.toggle("show");
        burgerMenu.classList.toggle("open");
      });

      const toggles = document.querySelectorAll(".dropdown-toggle");
      toggles.forEach((toggle) => {
        toggle.addEventListener("click", function () {
